<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:paddingEnd="@dimen/padding_large"
    android:paddingStart="@dimen/padding_large"
    android:layout_weight="3.5">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/scale_icon_tablet"
        android:layout_height="@dimen/scale_icon_tablet"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:src="@drawable/close"/>

    <com.company.zicure.registerkey.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/size_image_circle"
        android:layout_height="@dimen/size_image_circle"
        android:src="@drawable/icon_header"
        app:civ_border_width="@dimen/stroke_corner_size"
        app:civ_border_color="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_profile"
        android:text="Preeda Likitbavon"
        android:textSize="@dimen/size_text_small"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:paddingTop="@dimen/margin_padding_normal"
        android:layout_below="@+id/img_profile"/>

</RelativeLayout>
