<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.zicure.registerkey.LoginActivity"
    android:background="@color/colorBackgroundGray">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_medium"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/content_header_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/form_login">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_top_five">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/username"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/padding_large"
                        android:hint="@string/phone_number_th"
                        android:maxLength="12"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_top_five">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:padding="@dimen/padding_large"
                        android:maxLines="1"
                        android:id="@+id/password"
                        android:hint="@string/hint_password_th" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_small"
                    android:textStyle="bold"
                    android:padding="@dimen/padding_large"
                    android:text="@string/btn_login"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/padding_large"
                    android:background="@drawable/selector_btn_edit_user" />

                <TextView
                    android:id="@+id/txt_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="@dimen/size_text_small"
                    android:padding="@dimen/padding_small"
                    android:textColor="@android:color/black"
                    android:textColorLink="@color/colorAccent"
                    android:text="@string/detail_link" />
            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>
