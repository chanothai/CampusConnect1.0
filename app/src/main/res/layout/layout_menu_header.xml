<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_drawer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_material_profile"
    android:padding="@dimen/padding_large">

    <RelativeLayout
        android:id="@+id/child_header_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/size_image_circle"
            android:layout_height="@dimen/size_image_circle"
            android:src="@drawable/yajai"
            android:scaleType="centerCrop"
            app:sriv_border_color="@android:color/white"
            app:sriv_border_width="1dp"
            app:sriv_oval="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:layout_below="@+id/img_profile"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_name"
                android:text="Preeda Likitbavon"
                android:textSize="@dimen/size_text_small"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>
