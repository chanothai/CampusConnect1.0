<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_drawer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:padding="@dimen/padding_large">

    <com.company.zicure.registerkey.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/size_image_circle"
        android:layout_height="@dimen/size_image_circle"
        android:src="@drawable/icon_header"
        app:civ_border_width="@dimen/stroke_corner_size"
        app:civ_border_color="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:layout_below="@+id/img_profile"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:text="Preeda Likitbavon"
            android:textSize="@dimen/size_text_small"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_account"
            android:text="zicure@pakgon.com"
            android:textSize="@dimen/size_text_small"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>


</RelativeLayout>
