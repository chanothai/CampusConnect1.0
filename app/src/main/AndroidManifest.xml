<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.company.zicure.registerkey">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/logo_connect_official"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">

        </activity>

        //Check version for google play service
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
            tools:replace="android:value" />
        //put api key for google map
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDiCs8P6sY_o4znFETccP1hJkHPjYQB204" />

        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible">

        </activity>

        <activity
            android:name=".OTPActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible">

        </activity>

        <activity
            android:name="profilemof.zicure.company.com.profilemof.activity.ProfileActivity"
            android:screenOrientation="portrait" />

        <activity android:name="gallery.zicure.company.com.gallery.activity.GalleryActivity" />
        <activity android:name="gallery.zicure.company.com.gallery.activity.ShareImageActivity" />

        <meta-data
            android:name="com.company.zicure.registerkey.config.GlideConfiguration"
            android:value="GlideModule" />
        <!-- <activity android:name="com.company.zicure.payment.activity.AuthActivity"/> -->
        <activity
            android:name=".activity.CheckLoginActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".activity.BlocContentActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>